<% title t("views.weekends.show.title", :weekend_uuid => @weekend.uuid) %>


<div class="row">
  <div class="offset-md-2 col-md-8">
    <div class="mb-2 background-2 box-notification">
      <%= front_user_description(@weekend.front_user) %>
    </div>
    <div id="weekend-description" class="box-user-input background-1"><%= @weekend.body %></div>
  </div>

  <div class="col-md-2">
    <%= link_to t("views.weekends.show.edit_button"), edit_front_weekend_path(@weekend), :class => "btn btn-primary" %>
    <%= link_to t("views.weekends.show.delete_button"), [:front, @weekend], :data => { :confirm => t("views.weekends.show.delete_confirmation") }, :method => :delete, :class => "btn btn-danger" %>
  </div>
</div>

<script>

document.addEventListener("readystatechange", () => {
  strongifyWeekendDiv(document.getElementById("weekend-description"));
});


</script>
