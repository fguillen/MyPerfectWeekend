<%= form_for [:front, @weekend] do |f| %>
  <%= render "/shared/form_errors", :object => f.object %>
  <fieldset>
    <legend><%= "weekend attributes" %></legend>
    <hr>

    <div class="row mb-3">
      <%= f.label :city, class: "col-sm-2 col-form-label text-end"%>
      <div class="col-sm-10">
        <%= f.text_field :city, class: "form-control", placeholder: t("activerecord.attributes.weekend.city") %>
        <div class="form-text">Give a city to your weekend.</div>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :body, class: "col-sm-2 col-form-label text-end"%>
      <div class="col-sm-10">
        <%= f.text_area :body, class: "form-control", rows: 20, placeholder: t("activerecord.attributes.weekend.body") %>
        <div id="emailHelp" class="form-text">What do you want to say?</div>
      </div>
    </div>

    <div class="row">
      <div class="offset-sm-2 col">
        <%= f.submit class: "btn btn-primary" %>
      </div>
  </fieldset>
<% end %>
